<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/android_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:tag="@string/decks_android_title"
        app:cardElevation="8dp"
        app:cardCornerRadius="18dp">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal|center_vertical"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="40dp" android:layout_height="40dp"
                  android:id="@+id/android_image_view"
                  android:background="@drawable/circle_shape"
                  android:textSize="28sp"
                  android:gravity="center"
                  android:textColor="#FFFFFF"
                  android:text="@string/decks_android_image_text"
                  android:src="@drawable/ic_java_logo" android:layout_gravity="center_horizontal"
                  android:contentDescription="@string/decks_android_content_desc"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAlignment="center" android:textColor="@color/colorPrimary"
                  android:layout_marginTop="5dp"
                  android:textSize="16sp" android:textStyle="bold"
                  android:text="@string/decks_android_title"/>

    </LinearLayout>

</android.support.v7.widget.CardView>